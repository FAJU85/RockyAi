# Google Cloud Run optimized Dockerfile for Rocky AI UI
FROM node:20-alpine AS builder

# Set working directory
WORKDIR /app

# Copy package files
COPY apps/ui/package*.json ./

# Install dependencies
RUN npm ci --only=production

# Copy source code
COPY apps/ui/ ./

# Build the application
RUN npm run build

# Production stage
FROM nginx:alpine

# Copy built application
COPY --from=builder /app/dist /usr/share/nginx/html

# Copy nginx configuration
COPY deploy/gcp/nginx.conf /etc/nginx/nginx.conf

# Create non-root user
RUN addgroup -g 1001 -S rocky && \
    adduser -S rocky -u 1001

# Set permissions
RUN chown -R rocky:rocky /usr/share/nginx/html && \
    chown -R rocky:rocky /var/cache/nginx && \
    chown -R rocky:rocky /var/log/nginx && \
    chown -R rocky:rocky /etc/nginx/conf.d

# Switch to non-root user
USER rocky

# Expose port
EXPOSE 5173

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD wget --no-verbose --tries=1 --spider http://localhost:5173/ || exit 1

# Start nginx
CMD ["nginx", "-g", "daemon off;"]
