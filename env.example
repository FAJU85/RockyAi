# Rocky AI Environment Configuration
# Copy this file to .env and update the values

# Application Settings
APP_NAME=Rocky AI
APP_VERSION=0.2.0
ENVIRONMENT=development
DEBUG=true

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=rocky_ai
DB_USER=rocky
DB_PASSWORD=secure_password_change_in_production
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_MAX_CONNECTIONS=20

# Docker Model Runner Configuration
DMR_BASE_URL=http://localhost:11434
DMR_TIMEOUT=300
DMR_MAX_RETRIES=3
DMR_RETRY_DELAY=1.0

# Executor Configuration
EXECUTOR_MAX_TIME=30
EXECUTOR_MAX_MEMORY=512
EXECUTOR_MAX_OUTPUT=1048576
EXECUTOR_WORK_DIR=/tmp/rocky_executors
EXECUTOR_CLEANUP_AFTER=3600

# Security Configuration
SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALLOWED_ORIGINS=["*"]
RATE_LIMIT_PER_MINUTE=60

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE_PATH=
LOG_MAX_FILE_SIZE=10485760
LOG_BACKUP_COUNT=5

# Cache Configuration
CACHE_DEFAULT_TTL=3600
CACHE_ANALYSIS_TTL=7200
CACHE_MODEL_TTL=86400
CACHE_MAX_MEMORY=256mb

# Feature Flags
ENABLE_CACHING=true
ENABLE_DATABASE=true
ENABLE_EXECUTORS=true
ENABLE_MONITORING=true
